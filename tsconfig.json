{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@screens": ["screens"],
      "@assets": ["assets"],
      "@themes": ["themes"],
      "@store": ["store"],
      "@sagas": ["sagas"],
      "@components": ["components"],
      "@models": ["models"],
      "@constants": ["constants"],
      "@hooks": ["hooks"],
      "@utils": ["utils"],
      "@types": ["types"],
      "@services": ["services"],
      "@env": ["@env"]
    },
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react-native",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
